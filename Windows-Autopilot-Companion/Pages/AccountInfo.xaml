<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Windows_Autopilot_Companion.Pages.AccountInfo"
             xmlns:vms="clr-namespace:Windows_Autopilot_Companion.Viewmodels">

    <ContentPage.BindingContext>
        <vms:AccountInfoViewmodel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <ActivityIndicator IsRunning="true"
                   Color="SteelBlue" />

            <Image
                    Source="{Binding UserProfile.ProfileImage}"
                    HeightRequest="185"
                    Aspect="AspectFit"/>

            <Label
                Text="{Binding UserProfile.DisplayName, StringFormat='{0}'}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="UsernameLabel"
                Text="{Binding UserProfile.UserPrincipalName}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"/>
            <Button
                x:Name="LogoutBtn"
                Text="Logout"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
