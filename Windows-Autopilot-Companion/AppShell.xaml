<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Windows_Autopilot_Companion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Windows_Autopilot_Companion"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False"
    Title="Windows_Autopilot_Companion">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:Pages.Login}"
            Route="Pages.Login" />
        <ShellContent
            Title="Account Info"
            ContentTemplate="{DataTemplate local:Pages.AccountInfo}"
            Route="Pages.AccountInfo" />
    </FlyoutItem>

</Shell>
